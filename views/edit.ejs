<%- include('./components/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Property</title>
     <style>
      #upload-loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(255, 255, 255, 0.8);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .spinner {
        width: 50px;
        height: 50px;
        border: 6px solid #ccc;
        border-top: 6px solid crimson;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }

        100% {
          transform: rotate(360deg);
        }
      }
    </style>
</head>
<body class="bg-light">
     <div id="upload-loader" style="display: none;">
      <div class="spinner"></div>
    </div>

  <div class="container-fluid py-5 px-3">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">

        <div class="card shadow-sm rounded-3">
          <div class="card-body p-4">
            <h2 class="card-title text-center mb-4 text-primary">Edit Property</h2>
            
            <form 
            id="uploadForm"
              method="POST" 
              action="/listing/<%= newListing._id %>?_method=PUT" 
              enctype="multipart/form-data"
            >
              <!-- Title -->
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                  <input
                    type="text"
                    id="title"
                    name="listing[title]"
                    class="form-control"
                    value="<%= newListing.title %>"
                    required
                  />
                </div>
              </div>

              <!-- Description -->
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                  <textarea
                    id="description"
                    name="listing[description]"
                    class="form-control"
                    rows="4"
                    required
                  ><%= newListing.description %></textarea>
                </div>
              </div>

              <!-- Current Image Preview -->
              <% if (newListing.image && newListing.image.url) { %>
                <div class="mb-3 text-center">
                  <img
                    src="<%= newListing.image.url %>"
                    alt="Current Image"
                    class="img-fluid rounded mb-2"
                    style="max-height: 200px;"
                  />
                  <p class="small text-muted">Current Image</p>
                </div>
              <% } %>

              <!-- Replace Image -->
              <div class="mb-3">
                <label for="image" class="form-label">Replace Image</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-image"></i></span>
                  <input
                    type="file"
                    id="image"
                    name="listing[image]"
                    class="form-control"
                    accept="image/*"
                  />
                </div>
              </div>

              <!-- Price -->
              <div class="mb-3">
                <label for="price" class="form-label">Price (â‚¹)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-currency-rupee"></i></span>
                  <input
                    type="number"
                    id="price"
                    name="listing[price]"
                    class="form-control"
                    value="<%= newListing.price %>"
                    min="0"
                    required
                  />
                </div>
              </div>

              <!-- Location ID -->
              <div class="mb-3">
                <label for="location" class="form-label">Location ID</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                  <input
                    type="number"
                    id="location"
                    name="listing[location]"
                    class="form-control"
                    value="<%= newListing.location %>"
                    min="0"
                    required
                  />
                </div>
              </div>

              <!-- Country ID -->
              <div class="mb-3">
                <label for="country" class="form-label">Country ID</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-globe"></i></span>
                  <input
                    type="number"
                    id="country"
                    name="listing[country]"
                    class="form-control"
                    value="<%= newListing.country %>"
                    min="0"
                    required
                  />
                </div>
              </div>

              <!-- Submit Button -->
              <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">
                  <i class="bi bi-pencil-square me-2"></i>
                  Update Property
                </button>
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS + Popper (if not included in header) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script>
 

      
  const form = document.getElementById("uploadForm");
  const uploadLoader = document.getElementById("upload-loader");

  form.addEventListener("submit", function () {
    uploadLoader.style.display = "flex";
  });

    </script>
</body>
</html>
