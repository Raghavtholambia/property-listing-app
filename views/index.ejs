<%- include('./components/header.ejs') %>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listings</title>
    <style>
      /* optional tweaks */
      body {
        background-color: #f8f9fa;
      }
      .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body>
    <div class="container py-5">
      <!-- Success / Error -->
      <% if ((success && success.length) || (error && error.length)) { %>
        <%- include('./components/notification.ejs') %>
      <% } %>

      <h1 class="text-center mb-4 text-primary">Our Listings</h1>

      <div class="row gx-4 gy-5">
        <% users.forEach(user => { %>
          <div class="col-12 col-sm-6 col-lg-4">
            <a href="/listing/<%= user.id %>" class="text-decoration-none">
              <div class="card card-hover h-100 border-0 rounded-3">
                <img
                  src="<%= user.image.url %>"
                  class="card-img-top"
                  alt="Listing Image"
                  style="height: 250px; object-fit: cover;"
                />
                <div class="card-body">
                  <h5 class="card-title text-dark"><%= user.title %></h5>
                  <p class="card-text text-secondary" style="height: 4.5em; overflow: hidden;">
                    <%= user.description %>
                  </p>
                </div>
                <div class="card-footer bg-white border-0">
                  <span class="h5 text-danger">â‚¹ <%= user.price %></span>
                  <span class="float-end text-muted small">View details &rarr;</span>
                </div>
              </div>
            </a>
            <hr>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Make sure Bootstrap JS is loaded (Popper.js + Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
