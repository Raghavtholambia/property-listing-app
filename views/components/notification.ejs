<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<body>
  <!-- Notification Container -->
  <% if (success && success.length !== 0) { %>
  <div id="notificationBar" class="alert alert-success alert-dismissible fade show d-flex align-items-center justify-content-center mx-auto"
       style="max-width: 60%; margin-top: 20px; animation: slideDown 0.5s ease;">
    
    <!-- Success Icon -->
    <i class="fas fa-circle-check fa-lg text-success me-2"></i>

    <!-- Success Message -->
    <strong>Success!</strong>&nbsp;<%= success %>
    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>

  <% if (error && error.length !== 0) { %>
  <div id="notificationBar" class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-center mx-auto"
       style="max-width: 60%; margin-top: 20px; animation: slideDown 0.5s ease;">
    
    <!-- Error Icon -->
    <i class="fas fa-circle-exclamation fa-lg text-danger me-2"></i>

    <!-- Error Message -->
    <strong>Error!</strong>&nbsp;<%= error %>
    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>

  <!-- Animation Style -->
  <style>
    @keyframes slideDown {
      0% {
        transform: translateY(-30px);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }
  </style>

  <!-- Auto Dismiss Script -->
  <script>
    setTimeout(() => {
      const alert = document.getElementById('notificationBar');
      if (alert) {
        alert.classList.remove('show');
        alert.classList.add('fade');
        setTimeout(() => alert.remove(), 500);
      }
    }, 3000);
  </script>
</body>
