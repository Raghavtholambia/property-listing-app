<body>

<!-- Premium Header -->
<div class="premium-header">
  <div class="container-fluid" style="max-width:1400px">
    <div class="breadcrumb-premium">
      <a href="/">Home</a><span>/</span>
      <a href="/store/<%=clickListing.owner._id %>">shop</a><span>/</span>
      <span><%= clickListing.itemName %></span>
    </div>
  </div>
</div>

<div class="product-container">
  <div class="product-grid">

    <!-- LEFT COLUMN -->
    <div>

      <!-- IMAGE -->
      <div class="gallery-section fade-in">
        <div class="main-image-container">
          <img src="<%= clickListing.image.url %>" alt="<%= clickListing.itemName %>">
          <div class="zoom-badge">
            <i class="fas fa-search-plus"></i> Click to zoom
          </div>
        </div>
      </div>

      <!-- INFO -->
      <div class="product-info fade-in">

        <span class="category-badge">
          <i class="fas fa-tag"></i> <%= clickListing.category %>
        </span>

        <h1 class="product-title"><%= clickListing.itemName %></h1>

        <div class="owner-info">
          <div class="owner-avatar">
            <%= clickListing.owner.username.charAt(0).toUpperCase() %>
          </div>
          <div>
            <div style="font-weight:600"><a style="text-decoration: none; color: rgb(165, 26, 26);" href="/store/<%=clickListing.owner._id %>"><%= clickListing.owner.username %></a></div>
            <div class="text-muted small">Verified Owner</div>
          </div>
        </div>

        <div class="price-section">
          <div class="price-label">Daily Rental Price</div>
          <div>
            <span class="price-amount">₹<%= clickListing.pricePerDay.toLocaleString("en-IN") %></span>
            <span class="price-period">/ day</span>
          </div>
        </div>

        <h3 class="section-title" style="font-size:1.25rem">Description</h3>
        <p class="text-muted"><%= clickListing.description %></p>

        <h3 class="section-title" style="font-size:1.25rem">Location</h3>
        <p class="text-muted">
          <i class="fas fa-map-marker-alt text-warning"></i>
          <%= clickListing.city %>, <%= clickListing.country %>
        </p>

        <% if (currUser && (currUser._id.equals(clickListing.owner._id) || currUser.role === 'admin')) { %>
        <div class="action-buttons">
          <a href="/listing/<%= clickListing._id %>/edit" class="btn-edit">
            <i class="fas fa-edit"></i> Edit
          </a>
          <form action="/listing/<%= clickListing._id %>?_method=DELETE" method="POST">
            <button class="btn-delete">
              <i class="fas fa-trash"></i> Delete
            </button>
          </form>
        </div>
        <% } %>
      </div>

      <!-- REVIEWS -->
      <div class="reviews-section fade-in">
        <h2 class="section-title">Ratings & Reviews</h2>

        <div class="rating-overview">
          <div class="rating-score">
            <div class="rating-number"><%= avgRating.toFixed(1) %></div>
            <div class="rating-stars">
              <% for(let i=1;i<=5;i++){ %>
                <i class="fa-<%= i<=Math.round(avgRating) ? 'solid':'regular' %> fa-star"></i>
              <% } %>
            </div>
            <div class="rating-count">
              Based on <%= clickListing.reviews.length %> reviews
            </div>
          </div>

          <div class="rating-bars">
            <% [5,4,3,2,1].forEach(star => {
              const count = clickListing.reviews.filter(r=>r.rating===star).length;
              const percent = clickListing.reviews.length ? (count/clickListing.reviews.length)*100 : 0;
            %>
            <div class="rating-bar-item">
              <span class="bar-label"><%= star %> ★</span>
              <div class="bar-container">
                <div class="bar-fill" style="width:<%= percent %>%"></div>
              </div>
              <span class="bar-count"><%= count %></span>
            </div>
            <% }) %>
          </div>
        </div>

        <% clickListing.reviews.slice().reverse().forEach(rev => { %>
        <div class="review-item">
          <div class="review-header">
            <span class="review-author">@<%= rev.author.username %></span>
            <span class="review-stars">
              <% for(let i=1;i<=5;i++){ %>
                <i class="fa-<%= i<=rev.rating?'solid':'regular' %> fa-star"></i>
              <% } %>
            </span>
          </div>
          <p class="text-muted"><%= rev.comments %></p>
          <small class="text-muted">
            <i class="far fa-calendar"></i>
            <%= new Date(rev.createdAt).toLocaleDateString() %>
          </small>
        </div>
        <% }) %>
      </div>

      <% if (clickListing.latitude && clickListing.longitude) { %>
      <div class="map-section fade-in">
        <h2 class="section-title">Item Location</h2>
        <div id="map"></div>
      </div>
      <% } %>
    </div>

    <!-- RIGHT COLUMN (RENT CARD) -->
    <div>
      <div class="rental-card fade-in" id="rentalCard">
        <button class="close-modal" id="closeModal">
          <i class="fas fa-times"></i>
        </button>

        <h2 class="rental-card-title">Reserve Your Rental</h2>

        <form action="/cart/add/<%= clickListing._id %>" method="POST" id="rentForm">

          <div class="form-group-modern">
            <label class="form-label-modern">Start Date</label>
            <input type="date" class="form-control-modern" id="startDate" name="startDate" required>
          </div>

          <div class="form-group-modern">
            <label class="form-label-modern">End Date</label>
            <input type="date" class="form-control-modern" id="endDate" name="endDate" required>
          </div>

          <div class="form-group-modern">
            <label class="form-label-modern">Quantity</label>
            <div class="quantity-selector">
              <button type="button" class="qty-btn" id="qtyMinus">−</button>
              <input type="number" class="qty-input" id="quantity" name="quantity"
                value="1" min="1" max="<%= clickListing.stock || 5 %>" readonly>
              <button type="button" class="qty-btn" id="qtyPlus">+</button>
            </div>

            <% if (clickListing.stock > 0) { %>
            <span class="stock-badge">
              <i class="fas fa-check-circle"></i>
              <%= clickListing.stock %> items available
            </span>
            <% } %>
          </div>

          <div class="total-section">
            <div class="total-label">Estimated Total</div>
            <div class="total-amount" id="totalAmount">₹0</div>
          </div>

          <button type="submit" class="btn-rent-now">
            <i class="fas fa-shopping-cart"></i> Add to Cart
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- MOBILE RENT BAR -->
<div class="mobile-rent-bar">
  <div class="mobile-price">
    <div class="text-muted small">Starting at</div>
    <div class="mobile-price-amount">
      ₹<%= clickListing.pricePerDay.toLocaleString("en-IN") %>/day
    </div>
  </div>
  <button class="btn-rent-now" id="mobileRentBtn">
    <i class="fas fa-calendar-check"></i> Rent Now
  </button>
</div>

<script>
const pricePerDay = <%= clickListing.pricePerDay %>;
const startDate = document.getElementById("startDate");
const endDate = document.getElementById("endDate");
const quantity = document.getElementById("quantity");
const totalAmount = document.getElementById("totalAmount");
const maxStock = parseInt(quantity.max);

function calculateTotal() {
  if (!startDate.value || !endDate.value) return totalAmount.textContent = "₹0";
  const start = new Date(startDate.value);
  const end = new Date(endDate.value);
  if (end < start) return totalAmount.textContent = "₹0";

  const days = Math.ceil((end-start)/(1000*60*60*24))+1;
  totalAmount.textContent = "₹" + (days * pricePerDay * quantity.value).toLocaleString("en-IN");
}

startDate.addEventListener("change", calculateTotal);
endDate.addEventListener("change", calculateTotal);

qtyPlus.onclick = () => {
  if (+quantity.value < maxStock) quantity.value++;
  calculateTotal();
};
qtyMinus.onclick = () => {
  if (+quantity.value > 1) quantity.value--;
  calculateTotal();
};

/* MOBILE MODAL */
const rentalCard = document.getElementById("rentalCard");
document.getElementById("mobileRentBtn").onclick = () => {
  rentalCard.classList.add("active");
  document.body.style.overflow = "hidden";
};
document.getElementById("closeModal").onclick = () => {
  rentalCard.classList.remove("active");
  document.body.style.overflow = "";
};
</script>


<script
  src="https://maps.googleapis.com/maps/api/js?key=<%=apiKey%>&libraries=marker&v=beta&callback=initMap"
  async defer>
</script>


  <script>
    function initMap() {
      const position = { lat: <%= clickListing.latitude %>, lng: <%= clickListing.longitude %> };

      const map = new google.maps.Map(document.getElementById("map"), {
        center: position,
        zoom: 15,
        mapId: "DEMO_MAP_ID" // you can create a styled map ID in Google Cloud console if you want custom colors
      });

      // Advanced Marker
      new google.maps.marker.AdvancedMarkerElement({
        map,
        position: position,
        title: "<%= clickListing.itemName %>"
      });
    }

    window.initMap = initMap;
  </script>

</body>




















