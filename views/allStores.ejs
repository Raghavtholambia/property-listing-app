<%- include('./components/header.ejs') %>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Stores | Marketplace</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
      body {
        background: linear-gradient(135deg, #f8f9fa, #eef1f5);
        font-family: "Poppins", sans-serif;
        min-height: 100vh;
      }

      .store-card {
        border: none;
        border-radius: 18px;
        overflow: hidden;
        transition: all 0.35s ease-in-out;
        background: rgba(255, 255, 255, 0.95);
        height: 100%;
        display: flex;
        flex-direction: column;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        backdrop-filter: blur(10px);
        position: relative;
      }

      .store-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.18);
      }

      .store-banner {
        height: 230px;
        width: 100%;
        overflow: hidden;
      }

      .store-banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.55s ease;
      }

      .store-card:hover .store-logo img {
        transform: scale(1.08);
      }

      /* Logo below banner */
      .store-logo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid #fff;
        margin: -40px auto 10px auto; /* center below banner */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        background: #fff;
      }

      .store-logo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .store-info {
        padding: 10px 20px 20px;
        text-align: center;
      }

      .store-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #212529;
        margin-bottom: 5px;
      }

      .store-desc {
        color: #6c757d;
        font-size: 0.9rem;
        height: 3.8em;
        overflow: hidden;
      }

      .shop-type-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: linear-gradient(45deg, #650e2a, #a05107);
        color: #fff;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      }

      .store-footer {
        background: #fff;
        border-top: 1px solid #dee2e6;
        padding: 0.8rem 1.4rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
      }

      .owner-name {
        font-size: 0.92rem;
        color: #495057;
      }

      .view-store {
        font-size: 0.9rem;
        color: #6c757d;
      }

      h2.section-title {
        font-weight: 600;
        color: #212529;
        margin-bottom: 2rem;
      }
    </style>
  </head>

  <body>
    <div class="container py-5">
      <h2 class="section-title text-center">Explore All Stores</h2>

      <div class="row gx-4 gy-5">
        <% stores.forEach(store => { %>
          <div class="col-12 col-sm-6 col-lg-4 d-flex">
            <a href="/store/<%= store.slug %>" class="text-decoration-none w-100">
              <div class="store-card">
                
                <!-- Banner -->
                <div class="store-banner">
                  <img src="<%= store.shopBanner || 'https://via.placeholder.com/600x300' %>" alt="Store Banner" />
                </div>

                <!-- Shop Type -->
                <span class="shop-type-badge"><%= store.shopType || "General Store" %></span>

                <!-- Logo below banner -->
                <div class="store-logo">
                  <img src="<%= store.shopLogo || 'https://via.placeholder.com/150' %>" alt="Shop Logo" />
                </div>

                <!-- Content -->
                <div class="store-info">
                  <h5 class="store-title"><%= store.shopName %></h5>
                  <p class="store-desc"><%= store.description || "No description provided." %></p>
                </div>

                <!-- Footer -->
                <div class="store-footer">
                  <span class="owner-name">
                    <i class="fa-solid fa-user-shield me-1 text-primary"></i>
                    <%= store.owner.username %>
                  </span>
                  <span class="view-store">Visit Store â†’</span>
                </div>

              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<%- include('./components/footer.ejs') %>
