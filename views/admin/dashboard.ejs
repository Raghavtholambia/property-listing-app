<%- include('../components/header') %>

<div class="container-fluid mt-4">
  <h1 class="mb-4 text-center fw-bold text-primary">Admin Dashboard</h1>

  <div class="row g-4">

    <!-- USERS -->
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
          <span><i class="fa fa-users"></i> Users</span>
          <span class="fw-bold">
            <a href="javascript:void(0)" class="text-white text-decoration-underline" onclick="toggleSection('usersList')">
              <%= usersCount %>
            </a>
          </span>
        </div>

        <div class="card-body" id="usersList" style="display:none;">
          <h5 class="fw-bold mb-3">All Users</h5>
          <ul class="list-group">
            <% users.forEach(user => { %>
              <li class="list-group-item d-flex justify-content-between" id="user-<%= user._id %>">
                <span>
                  <a href="/admin/user/<%= user._id %>" class="text-decoration-none">
                    <i class="fa fa-user-circle text-primary"></i> 
                    <%= user.username %> - <%= user.email %>
                  </a>
                </span>
                <button class="btn btn-sm btn-danger delete-btn" data-id="<%= user._id %>">
                  <i class="fa fa-trash"></i> Delete
                </button>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>

    <!-- SELLERS -->
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between">
          <span><i class="fa fa-store"></i> Sellers</span>
          <span class="fw-bold">
            <a href="javascript:void(0)" class="text-white text-decoration-underline" onclick="toggleSection('sellersList')">
              <%= sellersCount %>
            </a>
          </span>
        </div>

        <div class="card-body" id="sellersList" style="display:none;">
          <h5 class="fw-bold mb-3">All Sellers</h5>
          <ul class="list-group">
            <% sellers.forEach(seller => { %>
              <li class="list-group-item d-flex justify-content-between" id="user-<%= seller._id %>">
                <span>
                  <a href="/store/<%= seller._id %>" class="text-decoration-none">
                    <i class="fa fa-user-tie text-success"></i> 
                    <%= seller.username %> - <%= seller.email %>
                  </a>
                </span>
                <button class="btn btn-sm btn-danger delete-btn" data-id="<%= seller._id %>">
                  <i class="fa fa-trash"></i> Delete
                </button>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>

    <!-- UNVERIFIED LISTINGS -->
    <div class="col-md-12">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark d-flex justify-content-between">
          <span><i class="fa fa-exclamation-circle"></i> Unverified Listings</span>
          <span class="fw-bold">
            <a href="javascript:void(0)" class="text-dark text-decoration-underline" onclick="toggleSection('pendingList')">
              <%= pendingListings.length %>
            </a>
          </span>
        </div>

        <div class="card-body" id="pendingList" style="display:none;">
          <h5 class="fw-bold mb-3">Pending Approval</h5>

          <div class="row g-3">
            <% pendingListings.forEach(listing => { %>
              <div class="col-md-4">
                <div class="card shadow-sm">
                  <img src="<%= listing.image.url %>" class="card-img-top" style="height:200px; object-fit:cover;">

                  <div class="card-body">
                    <h5 class="card-title fw-bold"><%= listing.itemName %></h5>
                    <p><strong>Price:</strong> â‚¹<%= listing.price %></p>
                    <p><strong>Owner:</strong> <%= listing.owner.username %></p>

                    <a href="/listing/<%= listing._id %>" class="btn btn-sm btn-primary">View</a>

                    <!-- APPROVE BUTTON -->
                    <form action="/admin/listings/<%= listing._id %>/approve" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-success">Approve</button>
                    </form>

                    <!-- REJECT BUTTON -->
                    <form action="/admin/listings/<%= listing._id %>/reject" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-danger">Reject</button>
                    </form>

                  </div>
                </div>
              </div>
            <% }) %>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>

<script>
function toggleSection(id) {
  const el = document.getElementById(id);
  el.style.display = (el.style.display === "none") ? "block" : "none";
}

// DELETE USER
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".delete-btn").forEach(btn => {
    btn.addEventListener("click", async () => {
      const id = btn.getAttribute("data-id");
      if (confirm("Are you sure?")) {
        const res = await fetch(`/admin/users/${id}`, { method: "DELETE" });
        const data = await res.json();
        if (data.success) document.getElementById(`user-${id}`).remove();
      }
    });
  });
});
</script>
