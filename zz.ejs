                const days = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                const total = days * quantity * pricePerDay;
                totalAmountEl.textContent = `₹${total.toLocaleString('en-IN')}`;
            } else {
                totalAmountEl.textContent = '₹0';
            }
        }

